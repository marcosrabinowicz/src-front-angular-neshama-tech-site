{
  "name": "neshama-tech-site",
  "version": "0.4.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --base-href /",
    "watch": "ng build --watch --configuration development",
    "pages": "npm run build && if [ -d docs/browser ]; then rsync -a docs/browser/ docs/ && rm -rf docs/browser; fi && if [ -f CNAME ]; then cp -f CNAME docs/CNAME; elif [ -f src/static/CNAME ]; then cp -f src/static/CNAME docs/CNAME; fi && git add docs -f && git commit -m \"build(docs): publish\" && git push",
    "release:patch": "npm version patch -m \"chore(release): v%s\" && npm run pages && git push --tags",
    "release:minor": "npm version minor -m \"chore(release): v%s\" && npm run pages && git push --tags",
    "release:major": "npm version major -m \"chore(release): v%s\" && npm run pages && git push --tags",
    "test": "ng test"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.1.0",
    "@angular/compiler": "^20.1.0",
    "@angular/core": "^20.1.0",
    "@angular/forms": "^20.1.0",
    "@angular/platform-browser": "^20.1.0",
    "@angular/router": "^20.1.0",
    "@fortawesome/fontawesome-free": "^7.0.0",
    "aos": "^2.3.4",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.1.4",
    "@angular/cli": "^20.1.4",
    "@angular/compiler-cli": "^20.1.0",
    "@types/aos": "^3.0.7",
    "@types/jasmine": "~5.1.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "prettier": "^3.6.2",
    "typescript": "~5.8.2"
  }
}
